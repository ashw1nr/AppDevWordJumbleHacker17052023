<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cluedialogbgblue_ma2">

    <LinearLayout
        android:id="@+id/linlayClueDialogTextViews_ma2"
        android:layout_width="375dp"
        android:layout_height="442dp"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/clueTitleTextViewOnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CLUE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="96sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cluePasteTextViewOnDialog"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Include Dialog here. Yet to do" />

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="193dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/blue_okaybtnbg_cluedialog_ma2"
            android:text="Okay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>