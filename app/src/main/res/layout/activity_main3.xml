<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/mainactivity_gradient_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <LinearLayout
        android:id="@+id/linearlayout_crown_lines"
        android:layout_width="415dp"
        android:layout_height="89dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347">

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_weight="10"
            android:background="@color/yellow_mav" />

        <ImageView
            android:id="@+id/ic_crown_maiv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_weight="10"
            android:contentDescription="@string/todo"
            android:src="@mipmap/ic_crown_mainactivity" />

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="10"
            android:background="@color/yellow_mav" />

    </LinearLayout>

    <TextView
        android:id="@+id/wordJumble_title_ma3"
        android:layout_width="150dp"
        android:layout_height="87dp"
        android:fontFamily="@font/lobster"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="WORD JUMBLE"
        android:textAlignment="center"
        android:textColor="@color/cyan_wordtitle_ma"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/linearlayout_crown_lines"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/GridsizeInput1textView"
        android:layout_width="203dp"
        android:layout_height="29dp"
        android:background="@drawable/round_textbox_ma1"
        android:gravity="center_horizontal"
        android:text="GridSize"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/WordInput1textView"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/round_textbox_ma1"
        android:gravity="center_horizontal"
        android:paddingTop="10sp"
        android:text="Words one below another"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/ClueInput1textView"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/round_textbox_ma1"
        android:gravity="center_horizontal"
        android:paddingTop="10sp"
        android:text="Clues one below another"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.317" />

    <EditText
        android:id="@+id/editTextGridsizeA1Input_ma3"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:background="@drawable/round_white_textbox_ma2"
        android:ems="10"
        android:gravity="center"
        android:hint=" Columns"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintVertical_bias="0.701" />

    <EditText
        android:id="@+id/editTextGridsizeB1Input_ma3"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:background="@drawable/round_white_textbox_ma2"
        android:ems="10"
        android:gravity="center"
        android:hint="Rows"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintVertical_bias="0.714" />

    <EditText
        android:id="@+id/editTextWord1Input_ma3"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:background="@drawable/round_white_textbox_ma2"
        android:ems="10"
        android:gravity="start|top"
        android:hint="  Word"
        android:includeFontPadding="true"
        android:inputType="textMultiLine"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.602" />

    <EditText
        android:id="@+id/editTextClue1Input_ma3"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:background="@drawable/round_white_textbox_ma2"
        android:ems="10"
        android:hint="  Clue"
        android:padding="5dp"
        android:includeFontPadding="true"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.633" />

    <Button
        android:id="@+id/startbutton_ma3"
        android:layout_width="151dp"
        android:layout_height="63dp"
        android:background="@drawable/round_bluetextboxstartbutton_ma"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:drawableEnd="@drawable/baseline_playarrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/textViewCrossX"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="X"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/editTextGridsizeB1Input_ma3"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/editTextGridsizeA1Input_ma3"
        app:layout_constraintTop_toBottomOf="@+id/GridsizeInput1textView"
        app:layout_constraintVertical_bias="0.352" />


</androidx.constraintlayout.widget.ConstraintLayout>